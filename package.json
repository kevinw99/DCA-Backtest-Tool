{
  "name": "stocks-backtest",
  "version": "1.0.0",
  "description": "Stock backtesting system with DCA strategies",
  "main": "backtest_dca.js",
  "scripts": {
    "test": "npm test --prefix backend && npm test --prefix frontend",
    "backtest": "node backtest_dca.js",
    "compare": "node compare_strategies.js",
    "prepare": "husky",
    "lint": "npm run lint --prefix backend && npm run lint --prefix frontend",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md}\""
  },
  "keywords": [
    "stocks",
    "backtest",
    "dca",
    "trading"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "sqlite3": "^5.1.6",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "backend/**/*.js": [
      "cd backend && eslint --fix",
      "cd backend && prettier --write"
    ],
    "frontend/src/**/*.{js,jsx}": [
      "cd frontend && eslint --fix",
      "cd frontend && prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
