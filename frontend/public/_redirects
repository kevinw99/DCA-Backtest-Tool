# Redirect /presentation to /presentation/ (add trailing slash)
/presentation  /presentation/  301

# Serve presentation static assets first (files that exist)
/presentation/assets/*  /presentation/assets/:splat  200

# Serve presentation HTML files (chrome-mcp transcripts, etc.)
/presentation/*.html  /presentation/:splat.html  200

# All other presentation routes go to Slidev SPA (force rewrite)
/presentation/*  /presentation/index.html  200!

